  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'pry'
end

# SCSS niceities
gem 'bourbon'
# Better JSON Templates
gem 'rabl'

# Slightly faster page loads
gem 'pjax-rails'

# Database 
